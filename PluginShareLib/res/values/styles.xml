<resources>

    <style name="ShareBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="ShareTheme" parent="ShareBaseTheme">
        <item name="android:buttonStyle">@style/ShareButtonStyle</item>
        <item name="layoutbg">#FF00CC00</item>
    </style>
    
    <style name="ShareButtonStyle">
        <item name="android:background">@android:color/black</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <attr name="layoutbg" format="color|reference"/>

</resources>
