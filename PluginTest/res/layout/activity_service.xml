<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pluginstudy.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/button_service_one"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StartOne" />

        <Button
            android:id="@+id/button_service_two"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StartTwo" />

        <Button
            android:id="@+id/button_service_three"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StartThree" />

        <Button
            android:id="@+id/button_service_bind_one"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ServiceBindOne" />

        <Button
            android:id="@+id/button_service_bind_method_one"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BindService_Method_One"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_service_bind_two"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ServiceBindTwo" />

        <Button
            android:id="@+id/button_service_bind_method_two"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BindService_Method_Two"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_service_process_bind_one"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ServiceProcessBindOne" />

        <Button
            android:id="@+id/button_service_process_bind_show"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BindServiceProcess_Method_Show"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_service_process_bind_calculate"
            style="@style/PluginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BindServiceProcess_Method_Calculate"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>